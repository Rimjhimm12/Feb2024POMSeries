<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="TestNG Open Cart Suite_1" verbose="2" thread-count="3" parallel="tests">
	
	
	<listeners>
		<listener
			class-name="com.qa.opencart.listeners.ExtentReportListener" />
		<listener
			class-name="com.qa.opencart.listeners.TestAllureListener" />
		<listener
			class-name="com.qa.opencart.listeners.AnnotationTransformer" />
	</listeners>


	<test name="Registation Page Test">
		<parameter name="browser" value="chrome"/>
		<classes>
			<class name="com.qa.opencart.tests.RegisrerPageTest" />
		</classes>
	</test>
	
	<test name="login Page Test">
		<parameter name="browser" value="chrome"/>
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test>
	
	<test name="Account Page Test">
		<parameter name="browser" value="firefox"/>
		<classes>
			<class name="com.qa.opencart.tests.AccountPageTest" />
		</classes>
	</test>
	
	
	
	<test name="Product information Page Test">
		<parameter name="browser" value="edge"/>
		<classes>
			<class name="com.qa.opencart.tests.ProductInfoPageTest" />
		</classes>
	</test>
	
	
	
	
	
</suite>